<%- include('layout') -%> <br /><br /><br />
<div class="container">
  <h2><% title%></h2>
  <form action="/alunos/add" method="post">
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Nome:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="text"
          name="nome"
          required
        /><br /><br />
      </div>
    </div>
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Idade:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="number"
          name="idade"
          required
        />
      </div>
    </div>
    <br /><br />
    <input class="btn btn-primary" type="submit" value="Submit" />
  </form>
</div>
